wait(0.5)

-- SERVICES
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "Exo´s Hub - TADC"
gui.Parent = game.CoreGui
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- MAIN HUB
local main = Instance.new("Frame")
main.Parent = gui
main.Size = UDim2.fromOffset(520,360)
main.Position = UDim2.fromScale(0.5,0.5)
main.AnchorPoint = Vector2.new(0.5,0.5)
main.BackgroundColor3 = Color3.fromRGB(45,75,155)
main.BorderSizePixel = 0
main.Active = true
Instance.new("UICorner", main).CornerRadius = UDim.new(0,20)

-- OUTLINE
local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(255,220,80)

-- TOP BAR
local top = Instance.new("Frame")
top.Parent = main
top.Size = UDim2.new(1,0,0,48)
top.BackgroundColor3 = Color3.fromRGB(120,30,30)
top.BorderSizePixel = 0
Instance.new("UICorner", top).CornerRadius = UDim.new(0,20)

-- TITLE
local title = Instance.new("TextLabel")
title.Parent = top
title.BackgroundTransparency = 1
title.Position = UDim2.fromOffset(16,0)
title.Size = UDim2.new(1,-160,1,0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Text = "Exo´s Hub - TADC"
title.Font = Enum.Font.GothamBlack
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255,220,80)

-- MINIMIZE HUB
local minimize = Instance.new("TextButton")
minimize.Parent = top
minimize.Size = UDim2.fromOffset(26,20)
minimize.Position = UDim2.new(1,-90,0.5,-10)
minimize.BackgroundColor3 = Color3.fromRGB(190,40,40)
minimize.Text = "-"
minimize.Font = Enum.Font.GothamBold
minimize.TextSize = 14
minimize.TextColor3 = Color3.fromRGB(255,220,80)
minimize.BorderSizePixel = 0
Instance.new("UICorner", minimize).CornerRadius = UDim.new(0,6)

-- CLOSE BUTTON
local close = Instance.new("TextButton")
close.Parent = top
close.Size = UDim2.fromOffset(28,38)
close.Position = UDim2.new(1,-44,0.5,-19)
close.BackgroundColor3 = Color3.fromRGB(170,30,30)
close.Text = "EXIT"
close.Font = Enum.Font.GothamBlack
close.TextSize = 11
close.TextColor3 = Color3.fromRGB(255,255,255)
close.BorderSizePixel = 0
Instance.new("UICorner", close).CornerRadius = UDim.new(0,4)

-- CONTAINER
local container = Instance.new("Frame")
container.Parent = main
container.Position = UDim2.fromOffset(20,70)
container.Size = UDim2.new(1,-40,1,-120)
container.BackgroundTransparency = 1

local layout = Instance.new("UIGridLayout", container)
layout.CellSize = UDim2.fromOffset(220,50)
layout.CellPadding = UDim2.fromOffset(16,16)

-- HUB BUTTON MAKER
local function hubButton(text, callback)
	local b = Instance.new("TextButton")
	b.Parent = container
	b.Text = text
	b.Font = Enum.Font.GothamBold
	b.TextSize = 16
	b.TextColor3 = Color3.fromRGB(255,220,80)
	b.BackgroundColor3 = Color3.fromRGB(170,35,35)
	b.BorderSizePixel = 0
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,14)
	b.MouseButton1Click:Connect(callback)
end

-- DRAG HUB
do
	local dragging, dragStart, startPos
	top.InputBegan:Connect(function(i)
		if i.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			dragStart = i.Position
			startPos = main.Position
		end
	end)
	UIS.InputChanged:Connect(function(i)
		if dragging and i.UserInputType == Enum.UserInputType.MouseMovement then
			local delta = i.Position - dragStart
			main.Position = UDim2.new(
				startPos.X.Scale, startPos.X.Offset + delta.X,
				startPos.Y.Scale, startPos.Y.Offset + delta.Y
			)
		end
	end)
	UIS.InputEnded:Connect(function(i)
		if i.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = false
		end
	end)
end

-- ANIMATED CLOSE HUB
local function animatedClose(guiFrame, closeBtn)
	closeBtn.MouseButton1Click:Connect(function()
		local tween = TweenService:Create(guiFrame, TweenInfo.new(0.25), {
			Size = UDim2.new(0,0,0,0),
			Position = UDim2.new(0.5,0,0.5,0),
			BackgroundTransparency = 1
		})
		tween:Play()
		tween.Completed:Wait()
		guiFrame:Destroy()
	end)
end
animatedClose(main, close)

-- MINIMIZE HUB LOGIC
local fullSize = main.Size
local mini = false
minimize.MouseButton1Click:Connect(function()
	mini = not mini
	if mini then
		TweenService:Create(main, TweenInfo.new(0.25), {Size = UDim2.fromOffset(520,48)}):Play()
		container.Visible = false
		minimize.Text = "+"
	else
		TweenService:Create(main, TweenInfo.new(0.25), {Size = fullSize}):Play()
		container.Visible = true
		minimize.Text = "-"
	end
end)

