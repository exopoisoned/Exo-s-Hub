hubButton("Exo Abillity", function()
	local mouse = player:GetMouse()
	UIS.InputBegan:Connect(function(input, gpe)
		if gpe then return end
		if input.KeyCode == Enum.KeyCode.V then
			if mouse.Target then
				local char = player.Character
				if char and char:FindFirstChild("HumanoidRootPart") then
					char.HumanoidRootPart.CFrame = CFrame.new(mouse.Hit.p + Vector3.new(0,3,0))
				end
			end
		end
	end)
end)

-- EYES (1-3 spawn, random delay 1.5-3.5 sec)
local eyeFolder = Instance.new("Folder", gui)
eyeFolder.Name = "Eyes"

local function spawnEye()
	local count = math.random(1,3)
	for i=1,count do
		local size = math.random(26,34)
		local eye = Instance.new("Frame")
		eye.Size = UDim2.fromOffset(size,size)
		eye.AnchorPoint = Vector2.new(0.5,0.5)
		eye.BackgroundColor3 = Color3.fromRGB(255,255,255)
		eye.BorderSizePixel = 0
		Instance.new("UICorner", eye).CornerRadius = UDim.new(1,0)

		local pupil = Instance.new("Frame")
		pupil.Size = UDim2.fromScale(0.28,0.28)
		pupil.AnchorPoint = Vector2.new(0.5,0.5)
		pupil.Position = UDim2.fromScale(0.5,0.5)
		pupil.BackgroundColor3 = Color3.fromRGB(0,0,0)
		pupil.BorderSizePixel = 0
		Instance.new("UICorner", pupil).CornerRadius = UDim.new(1,0)
		pupil.Parent = eye

		local x = math.random(0,title.AbsoluteSize.X)
		local y = title.AbsolutePosition.Y + title.AbsoluteSize.Y/2
		eye.Position = UDim2.new(0,title.AbsolutePosition.X + x,0,y)
		eye.Parent = eyeFolder

		local floatX = math.random(-30,30)
		local floatY = math.random(120,200)

		local float = TweenService:Create(eye, TweenInfo.new(math.random(3,5)), {
			Position = eye.Position - UDim2.fromOffset(floatX,floatY),
			BackgroundTransparency = 1
		})
		local fadePupil = TweenService:Create(pupil, TweenInfo.new(math.random(3,5)), {
			BackgroundTransparency = 1
		})
		float:Play()
		fadePupil:Play()
		float.Completed:Connect(function()
			eye:Destroy()
		end)
	end
end

task.spawn(function()
	while gui.Parent do
		spawnEye()
		task.wait(math.random(15,35)/10) -- 1.5 to 3.5 seconds
	end
end)
