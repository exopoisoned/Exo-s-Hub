--// Services
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

--// Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ExosBootloader"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

--// Main Frame (slightly taller)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 260, 0, 220)
mainFrame.Position = UDim2.new(0.5, -130, 0.5, -110)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = mainFrame

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 10)
title.BackgroundTransparency = 1
title.Text = "Exo´s Bootloader"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 24
title.Parent = mainFrame

-- Subtitle
local subtitle = Instance.new("TextLabel")
subtitle.Size = UDim2.new(1, 0, 0, 20)
subtitle.Position = UDim2.new(0, 0, 0, 55)
subtitle.BackgroundTransparency = 1
subtitle.Text = "Choose a Version."
subtitle.TextColor3 = Color3.fromRGB(255, 255, 255)
subtitle.Font = Enum.Font.Gotham
subtitle.TextSize = 18
subtitle.Parent = mainFrame

-- Bottom text
local smallText = Instance.new("TextLabel")
smallText.Size = UDim2.new(1, 0, 0, 16)
smallText.Position = UDim2.new(0, 0, 1, -22)
smallText.BackgroundTransparency = 1
smallText.Text = "you never know if you´re truly alone..."
smallText.TextColor3 = Color3.fromRGB(255, 255, 255)
smallText.Font = Enum.Font.Gotham
smallText.TextSize = 12
smallText.Parent = mainFrame

-- Button function
local function createButton(text, size, position, bgColor, textColor, outlineColor, func, gradient, textTransparency)
    local btn = Instance.new("TextButton")
    btn.Size = size
    btn.Position = position
    btn.BackgroundColor3 = bgColor
    btn.BorderSizePixel = 0
    btn.Text = text
    btn.TextColor3 = textColor
    btn.TextTransparency = textTransparency or 0
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.AutoButtonColor = true
    btn.Parent = mainFrame

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = btn

    -- UIStroke (button outline)
    local stroke = Instance.new("UIStroke")
    stroke.Color = outlineColor
    stroke.Thickness = 2
    stroke.Parent = btn

    -- Gradient (if provided)
    if gradient then
        local grad = Instance.new("UIGradient")
        grad.Color = gradient
        grad.Parent = btn
    end

    btn.MouseButton1Click:Connect(function()
        screenGui:Destroy()
        func()
    end)
end

-- Buttons
createButton("Default", UDim2.new(0, 180, 0, 30), UDim2.new(0, 40, 0, 80),
    Color3.fromRGB(255, 255, 200), Color3.fromRGB(200, 200, 100), Color3.fromRGB(255, 255, 0),
    function() loadstring(game:HttpGet("https://raw.githubusercontent.com/exopoisoned/Exo-s-Hub/refs/heads/main/Exo´s%20Hub"))() end
)

createButton("Aero Frutiger", UDim2.new(0, 180, 0, 30), UDim2.new(0, 40, 0, 120),
    Color3.fromRGB(0, 255, 0), Color3.fromRGB(173, 216, 230), Color3.fromRGB(173, 216, 230),
    function() loadstring(game:HttpGet("https://raw.githubusercontent.com/exopoisoned/Exo-s-Hub/refs/heads/main/Exo´s%20Hub%20-%20Aero%20Frutiger%20Edition"))() end,
    ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(0,255,0)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0,200,150)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0,255,0))
    },
    0.5
)

createButton("TADC", UDim2.new(0, 180, 0, 30), UDim2.new(0, 40, 0, 160),
    Color3.fromRGB(0, 0, 180),           -- solid blue button
    Color3.fromRGB(255, 0, 0),           -- solid red text
    Color3.fromRGB(255, 255, 0),         -- button outline
    function() loadstring(game:HttpGet("https://raw.githubusercontent.com/exopoisoned/Exo-s-Hub/refs/heads/main/Exo´s%20Hub%20-%20TADC%20Edition"))() end,
    nil,                                 -- no gradient
    0                                    -- fully opaque text
)

--// Make GUI draggable
do
    local dragging
    local dragInput
    local dragStart
    local startPos

    local function update(input)
        local delta = input.Position - dragStart
        local goal = {Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)}
        TweenService:Create(mainFrame, TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), goal):Play()
    end

    mainFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = mainFrame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    mainFrame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)

    RunService.RenderStepped:Connect(function()
        if dragging and dragInput then
            update(dragInput)
        end
    end)
end
