wait(0.5)

-- services
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- gui
local gui = Instance.new("ScreenGui")
gui.Name = "ExosHub"
gui.Parent = game.CoreGui
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- main
local main = Instance.new("Frame")
main.Parent = gui
main.Size = UDim2.fromOffset(520, 360)
main.Position = UDim2.fromScale(0.5, 0.5)
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.BackgroundColor3 = Color3.fromRGB(255,255,245)
main.BorderSizePixel = 0
main.Active = true
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 20)

-- outline
local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(255, 220, 140)

-- gradient
local grad = Instance.new("UIGradient", main)
grad.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255,255,255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255,245,215))
}

-- top bar
local top = Instance.new("Frame")
top.Parent = main
top.Size = UDim2.new(1,0,0,48)
top.BackgroundColor3 = Color3.fromRGB(255,230,160)
top.BorderSizePixel = 0
Instance.new("UICorner", top).CornerRadius = UDim.new(0,20)

local topGrad = Instance.new("UIGradient", top)
topGrad.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255,240,190)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255,210,120))
}

-- title
local title = Instance.new("TextLabel")
title.Parent = top
title.BackgroundTransparency = 1
title.Position = UDim2.fromOffset(16,0)
title.Size = UDim2.new(1,-120,1,0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Text = "Exo´s Hub"
title.Font = Enum.Font.GothamBlack
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextStrokeTransparency = 0.8

-- buttons
local function topButton(txt, x)
	local b = Instance.new("TextButton")
	b.Parent = top
	b.Size = UDim2.fromOffset(32,26)
	b.Position = UDim2.new(1,x,0.5,-13)
	b.BackgroundColor3 = Color3.fromRGB(255,255,255)
	b.Text = txt
	b.Font = Enum.Font.GothamBold
	b.TextSize = 16
	b.TextColor3 = Color3.fromRGB(200,160,60)
	b.BorderSizePixel = 0
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,8)
	return b
end

local minimize = topButton("-", -72)
local close = topButton("X", -36)

-- container
local container = Instance.new("Frame")
container.Parent = main
container.Position = UDim2.fromOffset(20,70)
container.Size = UDim2.new(1,-40,1,-120)
container.BackgroundTransparency = 1

local layout = Instance.new("UIGridLayout", container)
layout.CellSize = UDim2.fromOffset(220,50)
layout.CellPadding = UDim2.fromOffset(16,16)

-- SMALL THIN MESSAGE
local message = Instance.new("TextLabel")
message.Parent = main
message.BackgroundTransparency = 1
message.Position = UDim2.fromOffset(20, main.Size.Y.Offset - 28)
message.Size = UDim2.new(1,-40,0,20)
message.Text = "is this heaven...?"
message.Font = Enum.Font.Gotham
message.TextSize = 14
message.TextColor3 = Color3.fromRGB(200, 180, 0)
message.TextTransparency = 1 -- start hidden
message.TextXAlignment = Enum.TextXAlignment.Left

-- <<< MESSAGE FADE-IN FUNCTION >>>
local function fadeInMessage()
	TweenService:Create(message, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
		TextTransparency = 0
	}):Play()
end
-- <<< END CHANGE >>>

-- button maker
local function hubButton(text, callback)
	local b = Instance.new("TextButton")
	b.Parent = container
	b.Text = text
	b.Font = Enum.Font.GothamBold
	b.TextSize = 16
	b.TextColor3 = Color3.fromRGB(120,90,40)
	b.BackgroundColor3 = Color3.fromRGB(255,245,215)
	b.BorderSizePixel = 0
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,14)
	b.MouseButton1Click:Connect(callback)
end

-- DRAG FUNCTION
local function makeDraggable(frame, dragBar)
	local dragging, dragStart, startPos

	dragBar.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			dragStart = input.Position
			startPos = frame.Position
		end
	end)

	dragBar.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			local dragConn
			dragConn = UIS.InputChanged:Connect(function(move)
				if dragging then
					local delta = move.Position - dragStart
					local newPos = UDim2.new(
						startPos.X.Scale, startPos.X.Offset + delta.X,
						startPos.Y.Scale, startPos.Y.Offset + delta.Y
					)
					TweenService:Create(frame, TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
						Position = newPos
					}):Play()
				else
					dragConn:Disconnect()
				end
			end)
		end
	end)

	dragBar.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = false
		end
	end)
end

-- Close button animation
local function animatedClose(guiFrame, closeBtn)
	closeBtn.MouseButton1Click:Connect(function()
		local tween = TweenService:Create(guiFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
			Size = UDim2.new(0,0,0,0),
			Position = UDim2.new(0.5,0,0.5,0),
			BackgroundTransparency = 1
		})
		tween:Play()

		for _, child in pairs(guiFrame:GetDescendants()) do
			if child:IsA("TextLabel") or child:IsA("TextButton") then
				TweenService:Create(child, TweenInfo.new(0.25), {TextTransparency = 1}):Play()
				if child.BackgroundTransparency ~= 1 then
					TweenService:Create(child, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
				end
			end
		end

		tween.Completed:Wait()
		guiFrame:Destroy()
	end)
end

-- Apply drag & animated close
makeDraggable(main, top)
animatedClose(main, close)

-- HUB BUTTONS
hubButton("Exo´s Protection", function() wait(0.5) end)
hubButton("Exo´s Admin", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))() end)
hubButton("Exo Shot", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/Exunys/Aimbot-V2/main/Resources/Scripts/Aimbot%20V2%20GUI.lua"))() end)
hubButton("Exo´s Control", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ImMejor35/Global-TAS/main/lua"))() end)
hubButton("Exo´s Dance Moves", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/7yd7/Hub/refs/heads/Branch/GUIS/Emotes.lua"))() end)
hubButton("Exo Abillity", function()
	local mouse = player:GetMouse()
	UIS.InputBegan:Connect(function(input, gpe)
		if gpe then return end
		if input.KeyCode == Enum.KeyCode.V and mouse.Target then
			local char = player.Character
			if char and char:FindFirstChild("HumanoidRootPart") then
				char.HumanoidRootPart.CFrame = CFrame.new(mouse.Hit.p + Vector3.new(0,3,0))
			end
		end
	end)
end)

-- footer
local footer = Instance.new("TextLabel")
footer.Parent = main
footer.AnchorPoint = Vector2.new(0,1)
footer.Position = UDim2.new(0,0,1,-8)
footer.Size = UDim2.new(1,0,0,20)
footer.BackgroundTransparency = 1
footer.Text = "Made by Exoticly ©"
footer.Font = Enum.Font.Gotham
footer.TextSize = 14
footer.TextColor3 = Color3.fromRGB(170,170,170)

-- Smooth minimize/expand for Exo´s Hub
local fullSize = main.Size
local mini = false

minimize.MouseButton1Click:Connect(function()
	mini = not mini
	if mini then
		TweenService:Create(main, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
			Size = UDim2.fromOffset(520,48)
		}):Play()
		container.Visible = false
		footer.Visible = false
		minimize.Text = "+"
		message.TextTransparency = 1 -- hide instantly
	else
		TweenService:Create(main, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
			Size = fullSize
		}):Play()
		container.Visible = true
		footer.Visible = true
		minimize.Text = "-"
		wait(0.5) -- wait before fade
		fadeInMessage() -- fade in over 0.5s
	end
end)
