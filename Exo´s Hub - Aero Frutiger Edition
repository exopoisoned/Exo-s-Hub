local function showMessage()
	TweenService:Create(message, TweenInfo.new(0.5), {TextTransparency = 0.3}):Play()
end

local function hideMessage()
	TweenService:Create(message, TweenInfo.new(0.25), {TextTransparency = 1}):Play()
end

-- button maker
local function hubButton(text, callback)
	local b = Instance.new("TextButton")
	b.Parent = container
	b.Text = text
	b.Font = Enum.Font.GothamBold
	b.TextSize = 16
	b.TextColor3 = Color3.fromRGB(20, 80, 40)
	b.BackgroundColor3 = Color3.fromRGB(200, 255, 200)
	b.BorderSizePixel = 0
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,14)
	local grad = Instance.new("UIGradient", b)
	grad.Color = ColorSequence.new{
		ColorSequenceKeypoint.new(0, Color3.fromRGB(220,255,220)),
		ColorSequenceKeypoint.new(1, Color3.fromRGB(160,240,160))
	}
	b.MouseButton1Click:Connect(callback)
end

-- smooth draggable function
local function makeDraggable(frame, dragBar)
	local dragging = false
	local dragStart = Vector2.new()
	local startPos = UDim2.new()
	local dragTween

	local function update(input)
		if dragging and input.Position then
			local delta = input.Position - dragStart
			local targetPos = UDim2.new(
				startPos.X.Scale,
				startPos.X.Offset + delta.X,
				startPos.Y.Scale,
				startPos.Y.Offset + delta.Y
			)
			if dragTween then dragTween:Cancel() end
			dragTween = TweenService:Create(frame, TweenInfo.new(0.08, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Position = targetPos})
			dragTween:Play()
		end
	end

	dragBar.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			dragStart = input.Position
			startPos = frame.Position
			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragging = false
					-- optional soft snap tween on release
					TweenService:Create(frame, TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
						Position = frame.Position
					}):Play()
				end
			end)
		end
	end)

	dragBar.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			local moveConn
			moveConn = UIS.InputChanged:Connect(function(move)
				if dragging and move.UserInputType == Enum.UserInputType.MouseMovement then
					update(move)
				elseif not dragging then
					moveConn:Disconnect()
				end
			end)
		end
	end)
end

makeDraggable(main, top)

-- animated close
local function animatedClose(guiFrame, closeBtn)
	closeBtn.MouseButton1Click:Connect(function()
		local tween = TweenService:Create(guiFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
			Size = UDim2.new(0,0,0,0),
			Position = UDim2.new(0.5,0,0.5,0),
			BackgroundTransparency = 1
		})
		tween:Play()
		for _, child in pairs(guiFrame:GetDescendants()) do
			if child:IsA("TextLabel") or child:IsA("TextButton") then
				TweenService:Create(child, TweenInfo.new(0.25), {TextTransparency = 1}):Play()
				if child.BackgroundTransparency ~= 1 then
					TweenService:Create(child, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
				end
			end
		end
		tween.Completed:Wait()
		guiFrame:Destroy()
	end)
end

animatedClose(main, close)

-- Smooth minimize/expand
local fullSize = main.Size
local mini = false
minimize.MouseButton1Click:Connect(function()
	mini = not mini
	if mini then
		TweenService:Create(main, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.fromOffset(520,48)}):Play()
		container.Visible = false
		minimize.Text = "+"
		hideMessage()
	else
		TweenService:Create(main, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = fullSize}):Play()
		container.Visible = true
		minimize.Text = "-"
		task.delay(0.5, showMessage)
	end
end)

-- Show message at launch
task.delay(0.5, showMessage)

