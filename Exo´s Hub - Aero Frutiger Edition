hubButton("Exo Abillity", function()
	local mouse = player:GetMouse()
	UIS.InputBegan:Connect(function(input, gpe)
		if gpe then return end
		if input.KeyCode == Enum.KeyCode.V then
			if mouse.Target then
				local char = player.Character
				if char and char:FindFirstChild("HumanoidRootPart") then
					char.HumanoidRootPart.CFrame = CFrame.new(mouse.Hit.p + Vector3.new(0,3,0))
				end
			end
		end
	end)
end)

-- Bubbles effect
local BubbleFolder = Instance.new("Folder")
BubbleFolder.Name = "Bubbles"
BubbleFolder.Parent = gui

-- spawn bubbles
task.wait(0.2)
local function createBubble()
	local size = math.random(12,24)
	local bubble = Instance.new("Frame")
	bubble.Size = UDim2.fromOffset(size, size)
	bubble.AnchorPoint = Vector2.new(0.5, 0.5)
	local xPos = math.random(0, title.AbsoluteSize.X)
	local yPos = title.AbsolutePosition.Y + title.AbsoluteSize.Y / 2
	bubble.Position = UDim2.new(0, title.AbsolutePosition.X + xPos, 0, yPos)
	bubble.BackgroundColor3 = Color3.fromRGB(200,255,255)
	bubble.BackgroundTransparency = 0.6
	bubble.BorderSizePixel = 0
	Instance.new("UICorner", bubble).CornerRadius = UDim.new(0.5,0)
	bubble.Parent = BubbleFolder

	local outline = Instance.new("Frame")
	outline.Size = UDim2.fromScale(1,1)
	outline.Position = UDim2.new(0,0,0,0)
	outline.BackgroundTransparency = 0.9
	outline.BorderSizePixel = 2
	outline.BorderColor3 = Color3.fromRGB(180,255,255)
	outline.ZIndex = 1
	outline.Parent = bubble
	Instance.new("UICorner", outline).CornerRadius = UDim.new(0.5,0)

	local floatDistance = math.random(150,250)
	local floatTime = math.random(4,7)
	local startY = bubble.Position.Y.Offset
	local targetY = startY - floatDistance

	local tween = TweenService:Create(bubble, TweenInfo.new(floatTime, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
		Position = UDim2.new(bubble.Position.X.Scale, bubble.Position.X.Offset, 0, targetY),
		BackgroundTransparency = 1,
	})
	tween:Play()
	tween.Completed:Connect(function() bubble:Destroy() end)
end

spawn(function()
	while gui.Parent do
		createBubble()
		task.wait(math.random(3,6)/10)
	end
end)

